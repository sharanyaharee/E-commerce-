<html>
  <%- include('../partials/header.ejs') %>

  <!-- Breadcrumb Begin -->
  <div class="breadcrumb-option">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb__links">
            <a href="/"><i class="fa fa-home"></i> Home</a>
            <span>Wallet History</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="shop-cart spad">
    <div class="container">
      <h3 >Your Wallet Balance is: <span style="color:red">₹<%= user.wallet %></span> </h3>
      <br>
      <br>
      <div class="row">
        <div class="col-lg-12">
          <div class="shop__cart__table">
            <table class="striped">
              <thead>
                <tr>
                  <th>Transaction ID</th>
                  <th>Updated On</th>
                  <th>Reason</th>
                  <th>Debited</th>
                  <th>Credited</th>
                </tr>
              </thead>
              <tbody>
                <% walletTransactions.forEach(transaction => { %>
                  <tr>
                    <td><%= transaction._id %></td>
                    <td><%= transaction.updatedAt.toLocaleString() %></td>
                    <td><%= transaction.reason %></td>
                    <td style="color:red">-₹<%=transaction.type === 'debit' ? transaction.amount : '0' %></td>
                    <td style="color:green">+₹<%= transaction.type === 'credit' ? transaction.amount : '0' %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
   
  
  </section>
  <div class="col-lg-12 text-center">
    <div class="pagination__option">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>"><span class="arrow_left_alt"></span></a>
      <% } else { %>
        <span class="disabled"><span class="arrow_left_alt"></span></span>
      <% } %>
  
      <span class="current"><%= currentPage %></span>
  
      <% if (walletTransactions.length === 7) { %>
        <a href="?page=<%= currentPage + 1 %>"><span class="arrow_right_alt"></span></a>
      <% } else { %>
        <span class="disabled"><span class="arrow_right_alt"></span></span>
      <% } %>
    </div>
  </div>
  
  

  <%- include('../partials/footer.ejs') %>
</html>
