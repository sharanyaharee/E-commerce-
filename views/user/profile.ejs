<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header.ejs') %>

  <!-- Breadcrumb Begin -->
  <div class="breadcrumb-option">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb__links">
            <a href="/"><i class="fa fa-home"></i> Home</a>
            <a href="">My Profile</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumb End -->

  <section id="intro" class="h-auto">
    <div class="container py-5 mb-5" ">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <button
              type="button"
              class="btn btn-link"
              data-toggle="modal"
              data-target="#editProfileImageModal"
            >
              <img
                src="<%= userData.profileImage %>"
                alt="avatar"
                class="rounded-circle img-fluid"
                style="width: 150px"
              />
              <span class="icon_pencil-edit_alt"></span>
            </button>

            <h5 class="my-3"><%= userData.name %></h5>

            <div class="d-flex justify-content-center mb-2">
              <a type="button" href="/resetPassword" class="btn btn-danger"
                >Change Password</a
              >
            </div>
            <div class="cart__btn">
              <a href="/cart">Go to Cart</a>
            </div>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li
                class="list-group-item d-flex justify-content-between align-items-center p-3"
              >
                <a href="/editProfile">Edit Profile</a>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center p-3"
              >
                <a href="/orders">Order History</a>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center p-3"
              >
                <a href="/walletHistory">Wallet History</a>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center p-3"
              >
                <a href="/addAddress?returnUrl=/profile">Add Address</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>

              <% if (userData) { %>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= userData.name %></p>
              </div>
              <% } %>
            </div>

            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <% if (userData) { %>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= userData.email %></p>
              </div>
              <% } %>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <% if (userData) { %>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= userData.mobile %></p>
              </div>
              <% } %>
            </div>
            <hr />

            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Wallet Amount</p>
              </div>
              <% if (userData) { %>
              <div class="col-sm-9">
                <p class="text-muted mb-0">Rs<%= userData.wallet%></p>
              </div>
              <% } %>
            </div>
            <hr />

            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Account Created on</p>
              </div>
              <% if (userData) { %>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= userData.createdAt.toLocaleDateString() %>
                </p>
              </div>
              <% } %>
            </div>
            <hr />
            <% if (addresses && addresses.length > 0) { %>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <% addresses.forEach((address,index) => { %>
                <p class="text-muted mb-0">
                  <b>Address</b> <%= index + 1 %>: <br /><%= address.addressLine
                  %>, <%= address.city %>, <%= address.district %> - <%=
                  address.postCode %> <br />
                  <%= address.state %> <br />
                  <%= address.country %>
                </p>

                <div class="d-flex">
                  <form action="/editAddress/<%= address._id %>" method="get">
                    <button type="submit" class="btn btn-link">
                      <span class="icon_pencil-edit_alt"></span>
                    </button>
                  </form>

                  <form
                    action="/deleteAddress/<%= address._id %>"
                    method="post"
                    class="delete-address-form"
                  >
                    <button
                      type="submit"
                      class="btn btn-link"
                    >
                      <span class="icon_trash_alt"></span>
                    </button>
                  </form>
                </div>

                <% }); %>
              </div>
            </div>
            <% } else { %>
            <p class="text-muted">No addresses found.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div
    class="modal fade"
    id="editProfileImageModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="editProfileImageModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editProfileImageModalLabel">
            Edit Profile Image
          </h5>
          <button
            type="button"
            class="btn-close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form
            action="/updateProfileImage"
            method="post"
            enctype="multipart/form-data"
          >
            <label for="profileImage">Choose a new profile picture</label>
            <input
              type="file"
              id="profileImage"
              name="profileImage"
              accept="image/*"
              required
              onchange="displayImagePreview(this)"
            />
            <img
              id="selectedImagePreview"
              class="mt-2"
              style="max-width: 200px; max-height: 200px"
            />
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function displayImagePreview(input) {
      const selectedImagePreview = document.getElementById(
        "selectedImagePreview"
      );
      const file = input.files[0];

      if (file) {
        const reader = new FileReader();

        reader.onload = function (e) {
          selectedImagePreview.src = e.target.result;
        };

        reader.readAsDataURL(file);
      } else {
        selectedImagePreview.src = "";
      }
    }

    document.addEventListener("DOMContentLoaded", function () {
  console.log("DOMContentLoaded");
  const deleteAddressButtons = document.querySelectorAll(".delete-address-form button[type='submit']");

  deleteAddressButtons.forEach(function (button) {
    button.addEventListener("click", function (event) {
      event.preventDefault();
      const form = button.closest("form");

      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
      }).then((result) => {
        if (result.isConfirmed) {
          form.submit();
        }
      });
    });
  });
});

  </script>

  <%- include('../partials/footer.ejs') %>
</html>
