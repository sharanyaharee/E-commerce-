<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header.ejs')%>

<div class="banner__slider owl-carousel" style="padding: 0px 0 0;" >
    <% for(let i=0;i<bannerData.length;i++){%> 
        <section class="banner set-bg" data-setbg="<%=bannerData[i].bannerImage %>" style="background-image: url('<%=bannerData[i].bannerImage %>');background-size: cover; background-position: center;" >
                   <div class="col-xl-7 col-lg-8 mx-auto">
                    <div class="banner__slider">
                        <div class="banner__item">
                            <div class="banner__text" >
                                <span><%= bannerData[i].subHeading %></span>
                                <h1><%= bannerData[i].mainHeading %></h1>
                                <p><%= bannerData[i].description %></p>
                                <a href="/shop">Shop now</a>
                            </div>
                        </div>                                   
                       </div> 
                   </div>          
</section>
<% } %>  
</div> 
<p style="margin-top:15px;text-align: center; color: black; font-weight: bold;">
    Embrace the chill and let your style freeze the moment! <br>When the world turns icy, let your fashion be the warmth that melts away the cold. Winter style, your ultimate cozy companion!!
</p>

<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
      <% for (let i = 0; i < categories.length; i++) { %>
        <% if (i % 3 === 0) { %>
          <div class="row">
        <% } %>
        <div class="col-lg-4 p-0">
          <div class="categories__item set-bg" data-setbg="<%= categories[i].image %>">
            <div class="categories__text">
              <h1><%= categories[i].name %></h1>
             
              <a href="/shop/<%= categories[i]._id %>">Shop now</a>
              
            </div>
          </div>
        </div>
        <% if ((i + 1) % 3 === 0 || i === categories.length - 1) { %>
          </div>
        <% } %>
      <% } %>
    </div>
  </section>
  <!-- Categories Section End -->
  

<!-- Trend Section Begin -->
<section class="trend spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h4>Hot Offers</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <% for(let i = 0; i < productsWithOffers.length; i++) { %>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="trend__content">
                        <div class="trend__item">
                            <span class="bg-success text-white p-1">Sale</span> 
                            <div class="trend__item__pic">
                              
                             <a href="/product/<%= productsWithOffers[i]._id %>"> <img src="/assets/uploads/<%= productsWithOffers[i].productImages[0] %>" class="img-fluid" alt="<%= productsWithOffers[i].productName %>" style="max-width: 150px; max-height: 150px;"></a>  
                            </div>
                            <div class="trend__item__text">
                                <h6><%= productsWithOffers[i].productName %></h6>
                                <div class="rating">
                                </div>
                                <%if (productsWithOffers[i].onOffer) { %>
                                    <div class="product__price redd"> Rs. <%= productsWithOffers[i].offerPrice.toFixed(2) %> <span> Rs. <%= productsWithOffers[i].price %></span></div>
                                  <% } else { %>
                                    Rs. <%= productsWithOffers[i].price %>
                                  <% } %>
                          
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>
<!-- Trend Section End -->


