<%- include('../adminLayout/header.ejs')%>
<main id="main" class="main">

    <div class="pagetitle">
      <h1>New Banner</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">Banner</li>
          <li class="breadcrumb-item active">Add Banner</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-12">
<div class="card">
    <div class="card-body">
      <h5 class="card-title">A new banner</h5>

      <!-- Floating Labels Form -->
      <form class="row g-3" method="post" action="/admin/addBanner" enctype="multipart/form-data"  onsubmit="return validateForm()">
      
        <div class="col-md-6">
          <div class="form-floating">
            <input name="mainheading" type="text" class="form-control" id="floatingEmail" placeholder="main heading" required>
            <label for="floatingEmail">Main Heading</label>
            <div id="mainHeadingError" class="error-message text-danger"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-floating">
            <input name="subheading" type="text" class="form-control" id="floatingPassword" placeholder="sub heading" required>
            <label for="floatingPassword">Sub Heading</label>
            <div id="subHeadingError" class="error-message text-danger"></div> 
          </div>
        </div>
        <div class="col-6">
          <div class="form-floating">
            <textarea name="description" class="form-control" placeholder="description" id="floatingTextarea" style="height: 100px;"></textarea>
            <label for="floatingTextarea">Description</label>
          </div>
        </div>
        <div class="col-6">
          <label for="floatingTextarea">Banner image</label>  
          <div class="form-floating">
          
            <input accept="image/*" class="form-control " name="bannerImage"  type="file"  required
            onchange="displayImage(this)">
          
          </div>
          <img id="imagePreview" class="mt-2" style="max-width: 200px; max-height: 200px;" />
        </div>
      
      
     
        <div class="text-center">
          <button type="submit" class="btn btn-warning">Submit</button>
          <a href="/admin/adminCategoryView" class="btn btn-secondary">Cancel</button></a>
        </div>
      </form>

    </div>
  </div>

</div>
</div>
</section>

</main>
<script>
  function displayImage(input) {
      const imagePreview = document.getElementById("imagePreview");

      const file = input.files[0];

      if (file) {
          const reader = new FileReader();

          reader.onload = function (e) {
              imagePreview.src = e.target.result;
          };

          reader.readAsDataURL(file);
      }
  }

  function validateForm() {
    const mainHeading = document.getElementById('floatingEmail').value.trim();
    const subHeading = document.getElementById('floatingPassword').value.trim();
    let isValid = true;

    if (mainHeading.length > 30) {
      document.getElementById('mainHeadingError').innerHTML = "*Main heading should not exceed 30 characters.";
      isValid = false;
    } else {
      document.getElementById('mainHeadingError').innerHTML = "";
    }
    if (subHeading.length > 30) {
      document.getElementById('subHeadingError').innerHTML = "*Sub heading should not exceed 30 characters.";
      isValid = false;
    } else {
      document.getElementById('subHeadingError').innerHTML = "";
    }
    if (!/^\D+$/.test(mainHeading)) {
      document.getElementById('mainHeadingError').innerHTML = "*Main heading should contain only letters.";
      isValid = false;
    }
    if (!/^\D+$/.test(subHeading)) {
      document.getElementById('subHeadingError').innerHTML = "*Sub heading should contain only letters.";
      isValid = false;
    }

    return isValid;
  }

</script>


