<%- include('../adminLayout/header.ejs') %>

<main id="main" class="main">
  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin/adminDashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/adminCouponView">Coupon list</a>
        </li>
        <li class="breadcrumb-item active">Add new coupon</li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Add new Coupon</h5>

            <!-- Floating Labels Form -->
            <form
              class="row g-3"
              action="/admin/addCoupon"
              method="post"
              onsubmit="return validateForm(event)"
            >
              <div class="col-md-12">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="couponName"
                    id="floatingName"
                    placeholder="Coupon name"
                    required
                    oninput="validateCouponName(this, 'nameError')"
                  />
                  <label for="floatingName">Coupon Name</label>
                  <div id="nameError" class="text-danger"></div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="couponCode"
                    id="floatingEmail"
                    placeholder="Coupon code"
                    required
                    oninput="validateCouponCode(this, 'codeError')"
                  />
                  <label for="floatingEmail">Enter code</label>
                  <div id="codeError" class="text-danger"></div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="date"
                    class="form-control"
                    name="startDate"
                    id="floatingEmail"
                    placeholder="Start date"
                    required
                  />
                  <label for="floatingEmail">Start Date</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="date"
                    class="form-control"
                    name="endDate"
                    id="floatingPassword"
                    placeholder="End Date"
                    required
                  />
                  <label for="floatingPassword">End Date</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="number"
                    class="form-control"
                    name="minAmount"
                    id="floatingEmail"
                    placeholder="Minimum amount"
                    required
                    oninput="validateMin(this, 'minError')"
                  />
                  <label for="floatingEmail">Minimum Amount</label>
                  <div id="minError" class="text-danger"></div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="number"
                    class="form-control"
                    name="maxDiscount"
                    id="floatingPassword"
                    placeholder="Maximum discount"
                    required
                    oninput="validateMin(this, 'maxError')"
                  />
                  <label for="floatingPassword">Max Discount</label>
                  <div id="maxError" class="text-danger"></div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="col-md-12">
                  <div class="form-floating">
                    <input
                      type="number"
                      class="form-control"
                      name="quantity"
                      id="floatingCity"
                      placeholder="Quantity"
                      required
                      oninput="validateQuantity(this, 'quantityError')"
                    />
                    <label for="floatingCity">Quantity</label>
                    <div id="quantityError" class="text-danger"></div>
                  </div>
                </div>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-warning">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
              <% if(typeof message != 'undefined'){%>

              <p style="color: rgb(160, 35, 35); font-weight: bolder">
                <%= message%>
              </p>

              <% } %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<script>

 
  function validateCouponName(input, errorElement) {
    const error = document.getElementById(errorElement);
    const value = input.value;

    if (value.length > 10) {
      error.innerHTML = "Coupon name cannot exceed 10 characters.";
    } else {
      error.innerHTML = "";
    }
  }

  function validateCouponCode(input, errorElement) {
    const error = document.getElementById(errorElement);
    const value = input.value;

    if (value.length > 20) {
      error.innerHTML = "Coupon code cannot exceed 20 characters.";
    } else {
      error.innerHTML = "";
    }
  }

  function validateQuantity(input, errorElement) {
    const error = document.getElementById(errorElement);
    const value = parseInt(input.value);

    if (value <= 0 || isNaN(value)) {
      error.innerHTML = "Quantity must be a positive integer.";
    } else {
      error.innerHTML = "";
    }
  }

  function validateMin(input, errorElement) {
    const error = document.getElementById(errorElement);
    const value = parseInt(input.value);

    if (value < 0 || isNaN(value)) {
      error.innerHTML = "Amount must not be negative.";
    } else {
      error.innerHTML = "";
    }
  }

  function validateForm(event) {
    console.log("heeeeeeeeuaaaaaa")
    return (
      document.getElementById("nameError").innerHTML === "" &&
      document.getElementById("codeError").innerHTML === "" &&
      document.getElementById("minError").innerHTML === "" &&
      document.getElementById("quantityError").innerHTML === ""
    );
  }
</script>
<%- include('../adminLayout/footer.ejs') %>
