<%- include('../adminLayout/header.ejs') %>

<main id="main" class="main">
  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin/adminDashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/adminCouponView">Coupon list</a>
        </li>
        <li class="breadcrumb-item active">Edit coupon</li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Edit Coupon</h5>

            <!-- Floating Labels Form -->
            <form
              class="row g-3"
              action="/admin/editCoupon/<%= couponData._id %>"
              method="post"
            >
              <div class="col-md-12">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="couponName"
                    id="floatingName"
                    placeholder="Coupon name"
                    value="<%= couponData.couponName %>"
                    required
                  />
                  <label for="floatingName">Coupon Name</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="text"
                    class="form-control"
                    name="couponCode"
                    id="floatingEmail"
                    placeholder="Coupon code"
                    value="<%= couponData.couponCode %>"
                    required
                  />
                  <label for="floatingEmail">Enter code</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="date"
                    class="form-control"
                    name="startDate"
                    id="floatingEmail"
                    placeholder="Start date"
                    value="<%= couponData.startDate.toISOString().split('T')[0] %>"
                    required
                  />
                  <label for="floatingEmail">Start Date</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="date"
                    class="form-control"
                    name="endDate"
                    id="floatingPassword"
                    placeholder="End Date"
                    value="<%= couponData.endDate.toISOString().split('T')[0] %>"
                    required
                  />
                  <label for="floatingPassword">End Date</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="number"
                    class="form-control"
                    name="minAmount"
                    id="floatingEmail"
                    placeholder="Minimum amount"
                    value="<%= couponData.minAmount %>"
                    required
                  />
                  <label for="floatingEmail">Minimum Amount</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="number"
                    class="form-control"
                    name="maxDiscount"
                    id="floatingPassword"
                    placeholder="Maximum discount"
                    value="<%= couponData.maxDiscount %>"
                    required
                  />
                  <label for="floatingPassword">Max Discount</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <input
                    type="number"
                    class="form-control"
                    name="quantity"
                    id="floatingCity"
                    placeholder="Quantity"
                    value="<%= couponData.quantity %>"
                    required
                  />
                  <label for="floatingCity">Quantity</label>
                </div>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-warning">
                  Save Changes
                </button>
                <button type="button" class="btn btn-secondary"><a href="/admin/adminCouponView" style="text-decoration: none;">Cancel</a></button>
              </div>

              <% if (typeof message != 'undefined') { %>
              <p style="color: rgb(160, 35, 35)"><%= message %></p>
              <% } %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<%- include('../adminLayout/footer.ejs') %>
