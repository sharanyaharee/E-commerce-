                    >
                  </li>
                </ul>
              </div>

              <div class="card-body">
                <h5 class="card-title">Sales <span id="filterOptionSpan"></span></h5>

                <!-- Line Chart -->
                <div id="salesChart"></div>
                <script>
                  const initialSalesData = JSON.parse('<%- JSON.stringify(salesData) %>');
                  let salesChart;
              
                  document.addEventListener("DOMContentLoaded", () => {
                      renderSalesChart(initialSalesData);
              
                      const filterOptions = document.querySelectorAll(".filterOption");
                      filterOptions.forEach(option => {
                          option.addEventListener("click", event => {
                              event.preventDefault();
                              const filterOption = option.getAttribute("data-filter-option");
                              fetchSalesData(filterOption);
                          });
                      });
                  });
              
                  function fetchSalesData(filterOption) {
                      document.getElementById('filterOptionSpan').textContent = `/${filterOption}`;
                      const timestamp = new Date().getTime();
                      fetch(`/admin/getFilteredSalesData?filterOption=${filterOption}&timestamp=${timestamp}`)
                          .then(response => {
                              if (!response.ok) {
                                  throw new Error('Network response was not ok');
                              }
                              return response.json();
                          })
                          .then(data => {
                              console.log('Data received from server:', data);
                              if (!data || data.length === 0) { 
                                  console.error('Sales data is empty or invalid');
                                  return;
                              }
                              renderSalesChart(data); 
                          })
                          .catch(error => console.error('Error fetching sales data:', error));
                  }
              
                  function renderSalesChart(salesData) {
                      if (salesData && salesData.length > 0) {
                          const formattedData = salesData.map(item => ({
                              x: new Date(item.orderDate).getTime(),
                              y: item.totalAmount
                          }));
              
                          if (!salesChart) {
                              salesChart = new ApexCharts(document.querySelector("#salesChart"), {
                                  series: [{
                                      name: 'Sales',
                                      data: formattedData
                                  }],
                                  chart: {
                                      height: 350,
                                      type: 'area',
                                      toolbar: {
                                          show: false
                                      }
                                  },
                                  xaxis: {
                                      type: 'datetime'
                                  },
                                  tooltip: {
                                      x: {
                                          format: 'dd/MM/yy HH:mm'
                                      }
                                  }
                              });
              
                              salesChart.render();
                          } else {
                              salesChart.updateSeries([{
                                  data: formattedData
                              }]);
                          }
                      } else {
                          console.error("Sales data is empty.");
                      }
                  }
              </script>
              
